<!DOCTYPE html>
<html>
<head>
    <title>Listing Details</title>
</head>
<body>
    <h1><%= listing.marka %> - Details</h1>
    <p>Price: <%= listing.ar %></p>
    <p>City: <%= listing.varos %></p>
    <p>Date: <%= listing.datum.toISOString().slice(0, 10) %></p>

    <h3>Images</h3>
    <ul>
        <% listing.images.forEach(function(image) { %>
            <li><img src="../uploads/<%= image.fajlnev %>" alt="<%= image.fajlnev %>"></li>
        <% }) %>
    </ul>

    <form action="/listings/<%= listing.autoID %>/images" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
        <button type="submit">Upload Image</button>
    </form>

    <a href="/">Back to Listings</a>
</body>
</html>
